<base:ElementBase
    x:Class="Testing.Elements.ConditionElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Testing.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Testing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border Style="{StaticResource ConditionElement}">
        <!--  Inner Grid to counteract the rotation  -->
        <Grid>
            <Grid.LayoutTransform>
                <RotateTransform Angle="-45" />
            </Grid.LayoutTransform>

            <TextBlock Style="{StaticResource ElementHeader}" Text="Condition" />
        </Grid>
    </Border>
</base:ElementBase>
