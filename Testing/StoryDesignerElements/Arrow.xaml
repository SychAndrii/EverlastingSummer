<UserControl
    x:Class="Testing.StoryDesignerElements.Arrow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Testing.StoryDesignerElements"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Canvas>
        <!--  Line of the arrow  -->
        <Line
            Stroke="Black"
            StrokeThickness="2"
            X1="0"
            X2="{Binding XEnding, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Y1="0"
            Y2="{Binding YEnding, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <!--  Arrowhead  -->
        <Polygon Fill="Black" Points="240,50 250,40 250,60" />
    </Canvas>
</UserControl>
