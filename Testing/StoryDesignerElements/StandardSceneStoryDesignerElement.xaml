<base:StoryDesignerElementBase
    x:Class="Testing.StoryDesignerElements.StandardSceneStoryDesignerElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Testing.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Testing.StoryDesignerElements"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    MouseLeftButtonUp="StoryDesignerElementBase_MouseLeftButtonUp_1"
    Style="{StaticResource StandardSceneStoryDesignerElement}"
    mc:Ignorable="d">
    <Border>
        <StackPanel>
            <TextBlock Style="{StaticResource StoryDesignerElementName}" Text="Standard Scene 1" />
            <TextBlock Style="{StaticResource StoryDesignerElementSubtitle}" Text="Hello Mr. Zelenskiy. It's Joe Biden. I brought 5 billion rockets. Let's bomb Donetsk children together." />
        </StackPanel>
    </Border>
</base:StoryDesignerElementBase>
