<base:StoryDesignerElementBase
    x:Class="Testing.StoryDesignerElements.ChoiceSceneStoryDesignerElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Testing.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Testing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource ChoiceSceneStoryDesignerElement}"
    mc:Ignorable="d">
    <Border>
        <StackPanel>
            <TextBlock Style="{StaticResource StoryDesignerElementName}" Text="Choice Scene 1" />
            <TextBlock Style="{StaticResource StoryDesignerElementSubtitle}" Text="2 choices" />
        </StackPanel>
    </Border>
</base:StoryDesignerElementBase>
