<base:StoryDesignerElementBase
    x:Class="Testing.StoryDesignerElements.ConditionStoryDesignerElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Testing.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Testing.StoryDesignerElements"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource ConditionDesignerElement}"
    mc:Ignorable="d">
    <Border>
        <!--  Inner Grid to counteract the rotation  -->
        <Grid>
            <Grid.LayoutTransform>
                <RotateTransform Angle="-45" />
            </Grid.LayoutTransform>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock TextAlignment="Center" Style="{StaticResource StoryDesignerElementName}" Text="Condition" />
            <TextBlock TextAlignment="Center" Grid.Row="1" Style="{StaticResource StoryDesignerElementSubtitle}" Text="Type: Choice Based" />
        </Grid>
    </Border>
</base:StoryDesignerElementBase>
